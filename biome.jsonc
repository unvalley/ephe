{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "vcs": {
    "useIgnoreFile": true,
    "clientKind": "git",
    "enabled": true
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noDoubleEquals": {
          "level": "error",
          "options": {
            "ignoreNull": true
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  }
}
