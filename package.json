    "@tailwindcss/postcss": "^4.0.14",
    "@tailwindcss/vite": "^4.0.14",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/browser": "^3.1.1",
    "autoprefixer": "^10.4.14",
    "playwright": "^1.51.1",
    "postcss": "^8.4.31",
    "rollup-plugin-visualizer": "^5.14.0",
